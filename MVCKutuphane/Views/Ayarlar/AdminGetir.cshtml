@model MVCKutuphane.Models.Entity.TBLADMIN
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Ayarlar", FormMethod.Post))
{
    <div style="margin-bottom:25px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = true })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.KULLANICI, new { @class = "form-control" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.SIFRE, new { @class = "form-control"})
        <br />
        <label>Yetki</label>
        @Html.TextBoxFor(k => k.YETKI, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>
}
