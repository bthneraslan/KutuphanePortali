@model MVCKutuphane.Models.Entity.TBLDUYURU
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Duyuru Detay</h2>

@using (Html.BeginForm("DuyuruGuncelle", "Duyurular", FormMethod.Post))
{
    <div style="margin-bottom:25px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = true })
        <br />
        <label>Duyuru Kategori</label>
        @Html.TextBoxFor(k => k.ONEM, new { @class = "form-control" })
        <br />
        <label>Duyuru Kategori</label>
        @Html.TextAreaFor(k => k.DUYURU, new { @class = "form-control",rows="7",cols="70" })
        <br />
        <label>Duyuru Tarih</label>
        @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control" })
    </div>
    <br />
    <div>
        <button  class="btn btn-success">Güncelle</button>
    </div>
}
