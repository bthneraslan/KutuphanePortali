@using MVCKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3>İADESİ ALINAN KİTAP LİSTESİ</h3>

<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üyenin Getirdiği Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <th>@i.ID</th>
            <td>@i.TBLKITAP.AD</td>
            <td>@i.TBLUYELER.AD @i.TBLUYELER.SOYAD</td>
            <td>@i.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(i.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(i.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/Odunc/Odunciade/@i.ID" class="btn btn-default"
                   style="background-color:#bd0ea4; color:white">Detaylar</a>
            </td>

        </tr>
    }
</table>


