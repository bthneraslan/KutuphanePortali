@using MVCKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h3>ÖDÜNÇ KİTAP LİSTESİ</h3>

<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>

    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <th>@i.ID</th>
            <td>@i.TBLKITAP.AD</td>
            <td>@i.TBLUYELER.AD @i.TBLUYELER.SOYAD</td>
            <td>@i.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(i.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(i.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Odunc/Odunciade/@i.ID" class="btn btn-default" style="background-color:#0072ff; color:white">Kitabı İade Et</a></td>

        </tr>
    }
</table>

