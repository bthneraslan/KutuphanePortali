@model MVCKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @*@Html.TextBoxFor(h => h.UYE, new { @class = "form-control", @placeholder = "Üye ID'si Giriniz.." })*@
        @Html.DropDownListFor(k=>k.TBLUYELER.ID,(List<SelectListItem>)ViewBag.dgr1,new { @class = "form-control" } )
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID </label>
        @*@Html.TextBoxFor(h => h.KITAP, new { @class = "form-control", @placeholder = "Kitap ID'si Giriniz.." })*@
        @Html.DropDownListFor(k=>k.TBLKITAP.ID,(List<SelectListItem>)ViewBag.dgr2,new { @class = "form-control" } )
    </div>

    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(h => h.PERSONEL, new { @class = "form-control", @placeholder = "Personel ID'si Giriniz.." })*@
        @Html.DropDownListFor(k=>k.TBLPERSONEL.ID,(List<SelectListItem>)ViewBag.dgr3,new { @class = "form-control" } )
    </div>
    <div style="margin-top:15px">
        <label>Alış Tarihi</label>
        <input type="text" class="form-control" name="ALISTARIH"
               value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>İade Tarihi</label>
        <input type="text" class="form-control" name="IADETARIH"
               value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    

    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#64d8ca; color:white">Kitap Ver</button>
        <input type="hidden" name="ISLEMDURUM" value="false" />
    </div>
</form>