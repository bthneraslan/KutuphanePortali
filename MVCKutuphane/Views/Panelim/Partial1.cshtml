@using MVCKutuphane.Models.Entity
@model List<TBLDUYURU>

@{
    
    string renk = "";
}
@foreach (var i in Model)
{

    if (i.ONEM == "Önemli")
    {
        renk = "bg-warning text-white";
    }

    if (i.ONEM == "Çok önemli")
    {
        renk = "bg-danger text-white";
    }

    if (i.ONEM == "Önemsiz")
    {
        renk = "bg-success text-white";
    }

    <div class="post">

        <div class="user-block">

            <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">


            <span class="username">

                <a class="@renk" href="#">@i.ONEM</a>

                <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

            </span>

            <span class="description">@i.TARIH</span>

        </div>

        <!-- /.user-block -->

        <p>

            @i.DUYURU

        </p>

    </div>
}